{
    "key": "group_block_contact_form",
    "title": "Kontaktformular Block",
    "fields": [
        {
            "key": "field_contact_form_show_info",
            "label": "Info-Leiste anzeigen",
            "name": "show_info_bar",
            "type": "true_false",
            "default_value": 1,
            "ui": 1
        },
        {
            "key": "field_contact_form_info_title",
            "label": "Info-Titel",
            "name": "info_title",
            "type": "text",
            "default_value": "Kontaktinformationen",
            "conditional_logic": [
                [
                    {
                        "field": "field_contact_form_show_info",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        },
        {
            "key": "field_contact_form_info_subtitle",
            "label": "Info-Untertitel",
            "name": "info_subtitle",
            "type": "textarea",
            "rows": 2,
            "conditional_logic": [
                [
                    {
                        "field": "field_contact_form_show_info",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        },
        {
            "key": "field_contact_form_contact_info",
            "label": "Kontaktinformationen",
            "name": "contact_info",
            "type": "repeater",
            "min": 1,
            "max": 6,
            "layout": "table",
            "button_label": "Info hinzuf\u00fcgen",
            "conditional_logic": [
                [
                    {
                        "field": "field_contact_form_show_info",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ],
            "sub_fields": [
                {
                    "key": "field_contact_info_icon",
                    "label": "Icon",
                    "name": "icon",
                    "type": "select",
                    "choices": {
                        "phone": "Telefon",
                        "email": "E-Mail",
                        "location": "Standort",
                        "clock": "Uhr (\u00d6ffnungszeiten)"
                    },
                    "required": 1
                },
                {
                    "key": "field_contact_info_label",
                    "label": "Bezeichnung",
                    "name": "label",
                    "type": "text",
                    "required": 1
                },
                {
                    "key": "field_contact_info_value",
                    "label": "Wert",
                    "name": "value",
                    "type": "textarea",
                    "rows": 2,
                    "required": 1
                }
            ]
        },
        {
            "key": "field_contact_form_show_form",
            "label": "Kontaktformular anzeigen",
            "name": "show_form",
            "type": "true_false",
            "default_value": 1,
            "ui": 1
        },
        {
            "key": "field_contact_form_show_map",
            "label": "Karte anzeigen",
            "name": "show_map",
            "type": "true_false",
            "default_value": 1,
            "ui": 1
        },
        {
            "key": "field_contact_form_map_title",
            "label": "Karten-Titel",
            "name": "map_title",
            "type": "text",
            "default_value": "Standort",
            "conditional_logic": [
                [
                    {
                        "field": "field_contact_form_show_map",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        },
        {
            "key": "field_contact_form_map_embed",
            "label": "Google Maps Embed Code",
            "name": "map_embed_code",
            "type": "textarea",
            "rows": 5,
            "instructions": "F\u00fcgen Sie den vollst\u00e4ndigen iframe-Code von Google Maps ein",
            "placeholder": "<iframe src=\"https:\/\/www.google.com\/maps\/embed?...\" ...<\/iframe>",
            "conditional_logic": [
                [
                    {
                        "field": "field_contact_form_show_map",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        }
