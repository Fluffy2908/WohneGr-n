{
    "key": "group_page_section",
    "title": "Flexible Sektion Block",
    "fields": [
        {
            "key": "field_section_type",
            "label": "Sektionstyp",
            "name": "section_type",
            "type": "select",
            "instructions": "Wählen Sie den Typ der Sektion",
            "required": 1,
            "choices": {
                "text_image": "Text + Bild",
                "features_grid": "Features Grid",
                "values_grid": "Werte Grid",
                "cta_banner": "CTA Banner",
                "custom_html": "Benutzerdefiniertes HTML"
            },
            "default_value": "text_image",
            "allow_null": 0,
            "multiple": 0,
            "ui": 1,
            "return_format": "value"
        },
        {
            "key": "field_section_id",
            "label": "Sektion ID",
            "name": "section_id",
            "type": "text",
            "instructions": "Optional: HTML ID für Anker-Links (z.B. 'about-us')",
            "required": 0,
            "placeholder": "z.B. ueber-uns"
        },
        {
            "key": "field_section_class",
            "label": "Zusätzliche CSS-Klassen",
            "name": "section_class",
            "type": "text",
            "instructions": "Optional: Zusätzliche CSS-Klassen für erweiterte Styles",
            "required": 0,
            "placeholder": "z.B. custom-style"
        },
        {
            "key": "field_background_color",
            "label": "Hintergrundfarbe",
            "name": "background_color",
            "type": "select",
            "instructions": "Wählen Sie die Hintergrundfarbe der Sektion",
            "required": 0,
            "choices": {
                "white": "Weiß",
                "light": "Hell (Grau)",
                "primary": "Primär (Grün)",
                "dark": "Dunkel"
            },
            "default_value": "white",
            "allow_null": 0,
            "ui": 1
        },
        {
            "key": "field_padding_size",
            "label": "Innenabstand",
            "name": "padding_size",
            "type": "select",
            "instructions": "Wählen Sie die Größe des Innenabstands",
            "required": 0,
            "choices": {
                "none": "Kein Abstand",
                "small": "Klein",
                "normal": "Normal",
                "large": "Groß"
            },
            "default_value": "normal",
            "allow_null": 0,
            "ui": 1
        },
        {
            "key": "field_reverse_layout",
            "label": "Layout umkehren",
            "name": "reverse_layout",
            "type": "true_false",
            "instructions": "Kehrt die Reihenfolge der Elemente um (z.B. Bild links statt rechts)",
            "default_value": 0,
            "ui": 1
        },
        {
            "key": "field_section_title",
            "label": "Titel",
            "name": "section_title",
            "type": "text",
            "instructions": "Haupttitel der Sektion",
            "required": 0
        },
        {
            "key": "field_section_subtitle",
            "label": "Untertitel",
            "name": "section_subtitle",
            "type": "textarea",
            "instructions": "Optionaler Untertitel oder kurze Beschreibung",
            "required": 0,
            "rows": 2
        },
        {
            "key": "field_section_content",
            "label": "Inhalt",
            "name": "section_content",
            "type": "wysiwyg",
            "instructions": "Hauptinhalt für Text+Bild Layout",
            "required": 0,
            "tabs": "all",
            "toolbar": "full",
            "media_upload": 1,
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "text_image"
                    }
                ]
            ]
        },
        {
            "key": "field_section_image",
            "label": "Bild",
            "name": "section_image",
            "type": "image",
            "instructions": "Bild für Text+Bild Layout",
            "required": 0,
            "return_format": "array",
            "preview_size": "medium",
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "text_image"
                    }
                ]
            ]
        },
        {
            "key": "field_features_items",
            "label": "Features",
            "name": "features_items",
            "type": "repeater",
            "instructions": "Fügen Sie Feature-Karten hinzu",
            "required": 0,
            "min": 0,
            "max": 8,
            "layout": "block",
            "button_label": "Feature hinzufügen",
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "features_grid"
                    }
                ]
            ],
            "sub_fields": [
                {
                    "key": "field_feature_icon",
                    "label": "Icon",
                    "name": "icon",
                    "type": "text",
                    "instructions": "Icon-Name (z.B. check, home, star)",
                    "required": 0,
                    "placeholder": "z.B. check"
                },
                {
                    "key": "field_feature_title",
                    "label": "Titel",
                    "name": "title",
                    "type": "text",
                    "required": 1
                },
                {
                    "key": "field_feature_description",
                    "label": "Beschreibung",
                    "name": "description",
                    "type": "textarea",
                    "required": 0,
                    "rows": 3
                }
            ]
        },
        {
            "key": "field_values_items",
            "label": "Werte",
            "name": "values_items",
            "type": "repeater",
            "instructions": "Fügen Sie Werte-Karten hinzu",
            "required": 0,
            "min": 0,
            "max": 8,
            "layout": "block",
            "button_label": "Wert hinzufügen",
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "values_grid"
                    }
                ]
            ],
            "sub_fields": [
                {
                    "key": "field_value_icon",
                    "label": "Icon",
                    "name": "icon",
                    "type": "text",
                    "instructions": "Icon-Name (z.B. heart, leaf, users)",
                    "required": 0,
                    "placeholder": "z.B. heart"
                },
                {
                    "key": "field_value_title",
                    "label": "Titel",
                    "name": "title",
                    "type": "text",
                    "required": 1
                },
                {
                    "key": "field_value_description",
                    "label": "Beschreibung",
                    "name": "description",
                    "type": "textarea",
                    "required": 0,
                    "rows": 3
                }
            ]
        },
        {
            "key": "field_cta_button_text",
            "label": "Button Text",
            "name": "cta_button_text",
            "type": "text",
            "instructions": "Text für den CTA-Button",
            "required": 0,
            "placeholder": "z.B. Jetzt kontaktieren",
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "text_image"
                    }
                ],
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "cta_banner"
                    }
                ]
            ]
        },
        {
            "key": "field_cta_button_link",
            "label": "Button Link",
            "name": "cta_button_link",
            "type": "url",
            "instructions": "URL für den CTA-Button",
            "required": 0,
            "placeholder": "https://",
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "text_image"
                    }
                ],
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "cta_banner"
                    }
                ]
            ]
        },
        {
            "key": "field_custom_html",
            "label": "Benutzerdefiniertes HTML",
            "name": "custom_html",
            "type": "textarea",
            "instructions": "Geben Sie Ihr benutzerdefiniertes HTML ein",
            "required": 0,
            "rows": 8,
            "conditional_logic": [
                [
                    {
                        "field": "field_section_type",
                        "operator": "==",
                        "value": "custom_html"
                    }
                ]
            ]
        }
    ],
    "location": [
        [
            {
                "param": "block",
                "operator": "==",
                "value": "acf/wohnegruen-page-section"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "hide_on_screen": "",
    "active": true,
    "description": "Universeller flexibler Block für verschiedene Sektionstypen mit Live-Vorschau"
}
