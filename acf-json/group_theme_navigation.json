{
    "key": "group_theme_navigation",
    "title": "Navigation Einstellungen",
    "fields": [
        {
            "key": "field_nav_logo",
            "label": "Logo (Header)",
            "name": "nav_logo",
            "type": "image",
            "instructions": "Hauptlogo für die Navigation (empfohlen: PNG mit transparentem Hintergrund)",
            "return_format": "array",
            "preview_size": "medium",
            "library": "all"
        },
        {
            "key": "field_nav_logo_alt",
            "label": "Logo (Footer - Optional)",
            "name": "nav_logo_alt",
            "type": "image",
            "instructions": "Alternatives Logo für den Footer (optional, nutzt Header-Logo wenn leer)",
            "return_format": "array",
            "preview_size": "medium",
            "library": "all",
            "required": 0
        },
        {
            "key": "field_nav_cta_text",
            "label": "CTA Button Text",
            "name": "nav_cta_text",
            "type": "text",
            "instructions": "Text für den Call-to-Action Button in der Navigation",
            "default_value": "Beratung anfragen",
            "maxlength": 30
        },
        {
            "key": "field_nav_cta_link",
            "label": "CTA Button Link",
            "name": "nav_cta_link",
            "type": "text",
            "instructions": "Link für den CTA Button (z.B. /kontakt oder #kontakt)",
            "default_value": "#kontakt",
            "placeholder": "/kontakt"
        }
    ],
    "location": [
        [
            {
                "param": "options_page",
                "operator": "==",
                "value": "acf-options-navigation"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "active": true,
    "description": "Einstellungen für die Website-Navigation"
}
